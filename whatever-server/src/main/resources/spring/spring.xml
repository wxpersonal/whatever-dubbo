<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

    <!-- 由于通过dubbo实现接口和实现类的依赖关系，不需要spring管理 -->
    <!--  <context:component-scan base-package="com.xwtech" /> -->

    <!-- 配置文件列表 -->
    <!--<context:property-placeholder location="classpath:properties/*.properties" />-->

    <bean id="applicationProperties"
          class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="fileEncoding" value="UTF-8"></property>
        <property name="locations">
            <list>
                <value>classpath:properties/localconfig.properties</value>
            </list>
        </property>
    </bean>

    <!--非注解方式获取属性值，程序中通过CustomizedPropertyConfigurer.getContextProperty("XX") -->
    <bean id="propertyconfig"
          class="com.wx.whatever.common.util.CustomizedPropertyConfigurer">
        <property name="properties" ref="applicationProperties"></property>
    </bean>
    <bean id="springBeanInvoker" class="com.wx.whatever.common.util.SpringBeanInvoker" />
    <import resource="spring-dao.xml" />
    <import resource="spring-service.xml"/>
    <import resource="spring-trans.xml"/>
    <import resource="dubbo-consumer.xml" />
    <import resource="dubbo-provider.xml" />
    <!-- 引入redis，如果不需要，请注释import -->
    <import resource="spring-redis.xml"/>

</beans>
