<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!-- 加载配置文件 -->
	<context:property-placeholder location="classpath:properties/*.properties" />


	<!-- 动态数据源 -->
	<bean id="dynamicDataSource" class="com.wx.whatever.common.datasource.DynamicDataSource">
		<!-- 通过key-value关联数据源 -->
		<property name="targetDataSources">
			<map>
				<entry value-ref="dataSourceMaster" key="WRITE"></entry>
				<entry value-ref="dataSourceSlave" key="READ"></entry>
			</map>
		</property>
		<property name="defaultTargetDataSource" ref="dataSourceMaster" />
	</bean>

	<!-- 让spring管理sqlsessionfactory 使用mybatis和spring整合包中的 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- 数据库连接池 -->
		<property name="dataSource" ref="dynamicDataSource" />
		<!-- 加载mybatis的全局配置文件 -->
		<property name="configLocation" value="classpath:mybatis/mybatis-config.xml" />

		<property name="plugins">
			<array>
				<bean class="com.wx.whatever.common.datasource.DynamicPlugin"></bean>

				<!--mybatis pagehelper分页插件-->
				<bean class="com.github.pagehelper.PageInterceptor">
					<property name="properties">
						<value>
							helperDialect=mysql
						</value>
					</property>
				</bean>
			</array>
		</property>
		<!-- 自动扫描mapping.xml文件 -->
		<property name="mapperLocations">
			<list>
				<value>classpath:mybatis/mapper/*Mapper.xml</value>
				<!-- 扩展的xml -->
				<value>classpath:mybatis/mapper/cus/*Mapper.xml</value>
			</list>
		</property>
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.wx.whatever.dao" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"></property>
	</bean>


	<import resource="spring-dao-master.xml"/>
	<import resource="spring-dao-slave.xml"/>
	<import resource="spring-trans.xml"/>
	<import resource="spring-redis.xml"/>
</beans>